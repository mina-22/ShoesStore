@model Product
@{
    Layout = "_Layout";

   
}
<div class="overview">
    <div class="title">
        <i class="uil uil-tachometer-fast-alt"></i>
        <span class="text">Adding Product</span>
    </div>

    <div>
        <form class="row" method="post" asp-action="AddProduct" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="@Model.Name"  class="form-label">Product Name</label>
                <input type="text"
                       asp-for="@Model.Name"
                       class="form-control"
                       placeholder="" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Product Description</label>
                <textarea type="text"
                          asp-for="Description"
                          class="form-control"
                          placeholder=""></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="Price" class="form-label">Product Price</label>
                <input type="number"
                       asp-for="Price"
                       id=""
                       class="form-control"
                       placeholder=""></input>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3 col-lg-6">
                <label asp-for="Sale" class="form-label">Sale</label>
                <input type="number"
                       asp-for="Sale"
                       id=""
                       class="form-control"
                       placeholder=""></input>
                <span asp-validation-for="Sale" class="text-danger"></span>
            </div>

            <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                <div class="form-check me-3">
                    <input asp-for="Gender" value="true" class="form-check-input" type="radio"  id="flexRadioDefault1">
                    <label asp-for="Gender"  class="form-check-label" for="flexRadioDefault1">
                        Man
                    </label>
                </div>
                
                <div class="form-check">
                    <input asp-for="Gender" value="false"  class="form-check-input" type="radio"  id="flexRadioDefault2" >
                    <label asp-for="Gender" class="form-check-label" for="flexRadioDefault2">
                        Woman
                    </label>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
                
                    <div>
                        <div>
                            <label asp-for="ProductImage" class="form-label">Insert Image</label>
                    <input asp-for="ProductImage" class="form-control form-control-lg" id="formFileLg"  type="file">
                        </div>
                        <span asp-validation-for="ProductImage" class="text-danger">@TempData["ExistImage"]</span>
                    </div>
                        
            <div class="col-lg-12 d-flex justify-content-center mt-5 ">

                <button type="submit" class="btn btn-primary">Submit</button>

            </div>
        </form>

    </div>
</div>